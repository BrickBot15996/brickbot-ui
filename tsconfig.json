{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/components"],
  "exclude": [
    "node_modules",
    "dist",
    "src/stories",
    ".storybook",
    "**/*.stories.tsx",
    "**/*.test.ts"
  ]
}
